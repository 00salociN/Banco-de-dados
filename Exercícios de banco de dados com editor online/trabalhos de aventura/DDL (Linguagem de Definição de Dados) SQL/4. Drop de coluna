Escreva uma consulta SQL para remover uma coluna de uma tabela existente.

-- tabela existente
create table cliente(
    id int auto_increment,
    nomecliente varchar(100),
    idade int not null check (idade > -1),
    altura decimal(5,2) not null,
    constraint PKcliente primary key(id)
);

-- drop de uma coluna
alter table cliente drop column altura;